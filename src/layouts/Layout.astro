---
import Footer from '@components/Layout/Footer.astro'
import LogoHomeLink from '@components/Layout/LogoHomeLink.astro'
import { Navigation } from '@components/Layout/Navigation'
import { ScrollTopLink } from '@components/Layout/ScrollTopLink'

// https://docs.astro.build/en/guides/fonts/#using-fontsource
import '@fontsource/overpass/variable-italic.css'
import '@fontsource/overpass/variable.css'

export interface Props {
  title: string
}

const { title } = Astro.props
const pathname = new URL(Astro.request.url).pathname
const isHome = pathname === '/'
---

<!DOCTYPE html>
<html lang="de" class="h-full scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#e6007e" />
    <title>{title}</title>
  </head>
  <body class="h-full text-base">
    <div class="flex h-full flex-col text-[#1e293b]">
      <Navigation client:load currentPage={pathname} />
      <ScrollTopLink client:load />
      <main class="z-0 flex-grow bg-white">
        <LogoHomeLink isHome={isHome} />
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
